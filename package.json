{
  "name": "probot-kit",
  "description": "A collection of high-level tools to build Github bots using Probot",
  "version": "0.5.0",
  "author": "Kevin Goslar <kevin.goslar@gmail.com>",
  "dependencies": {
    "@octokit/webhooks": ">=7.1.1",
    "got": "10.7.0",
    "gunzip-maybe": "1.4.1",
    "js-yaml": "3.13.1",
    "parse-diff": "0.7.0",
    "probot": ">=9.11.2",
    "tar-stream": "2.1.2"
  },
  "devDependencies": {
    "@types/got": "9.6.9",
    "@types/js-yaml": "3.12.3",
    "@types/mocha": "7.0.2",
    "@types/node": "13.9.8",
    "@types/tar-stream": "2.1.0",
    "assert-no-diff": "3.0.4",
    "camelcase": "5.3.1",
    "dprint": "^0.49.0",
    "mocha": "7.1.1",
    "text-runner": "4.0.2",
    "ts-node": "8.8.1",
    "tslint": "6.1.0",
    "typescript": "3.8.3"
  },
  "files": [
    "dist"
  ],
  "homepage": "https://github.com/kevgo/probot-kit",
  "license": "ISC",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "docs": "text-run --format dot",
    "fix": "tslint --project . --fix && dprint fmt",
    "lint": "tsc --noEmit && tslint --project tsconfig.json &&  dprint check",
    "prepublishOnly": "npm run build",
    "setup": "npm install",
    "test": "npm run build && npm run fix && npm run unit",
    "unit": "mocha test/*.test.ts"
  }
}
